# Mailcow environment configuration
MAILCOW_HOSTNAME={{ mailcow_hostname }}

# Default timezone
TZ={{ mailcow_tz | default("UTC") }}

# Database configuration (default values can be adjusted)
DBNAME={{ mailcow_dbname | default("mailcow") }}
DBUSER={{ mailcow_dbuser | default("mailcowuser") }}
DBPASS={{ mailcow_dbpass | default("") }}
DBROOT={{ mailcow_dbroot | default("") }}

# Additional variables
REDISPASS={{ mailcow_redispass | default("") }}
ADDITIONAL_SAN={{ mailcow_additional_san | default("") }}

# Skip Let's Encrypt (using Traefik for SSL)
SKIP_LETS_ENCRYPT=y

# Skip HTTP_BIND (using Traefik for HTTP)
HTTP_BIND=127.0.0.1
HTTP_PORT=8080

# Skip HTTPS_BIND (using Traefik for HTTPS)
HTTPS_BIND=127.0.0.1
HTTPS_PORT=8443

# Docker compose project name
COMPOSE_PROJECT_NAME=mailcow-dockerized
